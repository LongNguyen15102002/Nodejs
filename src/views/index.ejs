<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Node.JS Basic</title>
        <link rel="stylesheet" href="/css/style.css" />
        <link
            rel="stylesheet"
            href="https://www.w3schools.com/w3css/4/w3.css"
        />
    </head>

    <body>
        <div class="topnav">
            <a class="active" href="#home">Home</a>
            <a href="#news">News</a>
            <a href="#about">About</a>
        </div>

        <div>
            <div class="w3-container">
                <h2>List Presents Table</h2>

                <table class="w3-table-all w3-hoverable">
                    <thead>
                        <tr class="w3-light-grey">
                            <th>ID</th>
                            <th>Present Name</th>
                            <th>Present Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < dataPresent.length; i++) { %>
                        <tr>
                            <td><%= dataPresent[i].id %></td>
                            <td><%= dataPresent[i].presentName %></td>
                            <td><%= dataPresent[i].presentType %></td>
                            <td>
                                <a
                                    href="/detail/present/<%= dataPresent[i].id %>"
                                    target="_blank"
                                    >Detail</a
                                >
                                <form
                                    action="/edit-present/<%= dataPresent[i].id %>"
                                    method="get"
                                >
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/delete-present" method="post">
                                    <input
                                        type="text"
                                        hidden
                                        value="<%= dataPresent[i].id %>"
                                        name="presentId"
                                    />
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="create-present-container">
                <form action="/create-new-present" method="post">
                    <div><b>Create a new Present</b></div>
                    <div>
                        <label>Present Name:</label>
                        <input type="text" name="presentName" />
                    </div>
                    <div>
                        <label>Present Type:</label>
                        <input type="text" name="presentType" />
                    </div>
                    <div>
                        <button type="submit" class="btn-submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
